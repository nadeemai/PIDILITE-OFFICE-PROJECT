<mvc:View
    controllerName="com.tableentry.tablestructure.controller.Table_Entry"
   xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  displayBlock="true"
  class="dashboardView">

  <VBox id="_IDGenVBox" class="sapUiSmallMargin">

    <!-- Header Tiles -->
    <HBox id="_IDGenHBox" justifyContent="Center" alignItems="Center" class="sapUiSmallMarginBottom">
      <GenericTile id="_IDGenGenericTile" header="Pending" subheader="Requests" class="smallTile sapUiTinyMargin">
        <TileContent id="_IDGenTileContent">
          <NumericContent id="_IDGenNumericContent" value="{/pendingCount}" valueColor="Critical" />
        </TileContent>
      </GenericTile>
      <GenericTile id="_IDGenGenericTile1" header="Approved" subheader="Requests" class="smallTile sapUiTinyMargin">
        <TileContent id="_IDGenTileContent1">
          <NumericContent id="_IDGenNumericContent1" value="{/approvedCount}" valueColor="Good" />
        </TileContent>
      </GenericTile>
      <GenericTile id="_IDGenGenericTile2" header="Rejected" subheader="Requests" class="smallTile sapUiTinyMargin">
        <TileContent id="_IDGenTileContent2">
          <NumericContent id="_IDGenNumericContent2" value="{/rejectedCount}" valueColor="Error" />
        </TileContent>
      </GenericTile>
    </HBox>

    <!-- Action Buttons -->
    <HBox id="_IDGenHBox1" class="sapUiSmallMarginBottom" alignItems="Center" justifyContent="End">
      <Button id="_IDGenButton3" text="info" press="onInfoPress" />
      <Button id="_IDGenButton4" text="filters" press="onFilterPress" />
      <Button id="_IDGenButton5" text="create" type="Emphasized" press="onCreatePress" />
    </HBox>

    <!-- Table -->
    <Table id="dashboardTable" items="{/requests}" mode="SingleSelectMaster" itemPress="onItemPress">
      <columns>
        <Column id="_IDGenColumn"><Text id="_IDGenText" text="Title" /></Column>
        <Column id="_IDGenColumn1"><Text id="_IDGenText1" text="Created By" /></Column>
        <Column id="_IDGenColumn2"><Text id="_IDGenText2" text="Created On" /></Column>
        <Column id="_IDGenColumn3"><Text id="_IDGenText3" text="Status" /></Column>
        <Column id="_IDGenColumn4"><Text id="_IDGenText4" text="Modified On" /></Column>
        <Column id="_IDGenColumn5"><Text id="_IDGenText5" text="Creator Comments" /></Column>
        <Column id="_IDGenColumn6"><Text id="_IDGenText6" text="Reference No." /></Column>
        <Column id="_IDGenColumn7"><Text id="_IDGenText7" text="Level 1 Approver" /></Column>
        <Column id="_IDGenColumn8"><Text id="_IDGenText8" text="Level 2 Approver" /></Column>
        <Column id="_IDGenColumn9"><Text id="_IDGenText9" text="Level 3 Approver" /></Column>
      </columns>
      <items>
        <ColumnListItem id="_IDGenColumnListItem1">
          <cells>
            <Button id="_IDGenButton9" text="View" press="onItemView" />
            <Text id="_IDGenText10" text="{createdBy}" />
            <Text id="_IDGenText11" text="{createdOn}" />
            <Text id="_IDGenText12" text="{status}" />
            <Text id="_IDGenText13" text="{modifiedOn}" />
            <Text id="_IDGenText14" text="{creatorComments}" />
            <Text id="_IDGenText15" text="{referenceNo}" />
            <Text id="_IDGenText25" text="{level1}" />
            <Text id="_IDGenText26" text="{level2}" />
            <Text id="_IDGenText27" text="{level3}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>

    <!-- Upload Section -->
    <HBox id="_IDGenHBox2" justifyContent="End" class="sapUiSmallMarginTop">
      <Text id="_IDGenText28" text="Attachments (0)" />
      <!-- <UploadCollectionUploadButton id="_IDGenUploadCollectionUploadButton" /> -->
    </HBox>

  </VBox>
</mvc:View>
